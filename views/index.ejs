<%- include('partials/header') %>

<div class="container">
    <div class="row bg-light mt-5">
        <div class="col-sm-6 shadow-lg">
            <h1 class="text-center p-2 bg-info">Add New student</h1>
            <form method="POST">
                 <div class="form-group m-2">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name">
                 </div> 
                  <div class="form-group m-2">
                    <label for="age">Age</label>
                    <input type="text" class="form-control" name="age">
                 </div>
                 <div class="form-group m-2">
                    <label for="fees">Fees</label>
                    <input type="text" class="form-control" name="fees">
                 </div>

                 <button class="btn border-info m-2">Submit</button>
            </form>
        </div>
        <div class="col-sm-6">
            <h1 class="p-2 bg-warning">List Of student</h1>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Fees</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((item,i)=>{ %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= item.name %></td>
                        <td><%= item.age %></td>
                        <td><%= item.fees %></td>
                        <td>
                            <form method="get" class="d-inline" action="/student/edit/<%= item._id %>">
                                <button><i class="fa fa-edit text-info"></i>
                                </button>
                            </form>
                            <form method="post" class="d-inline" action="/student/delete/<%= item._id %>">
                                <button><i class="fa fa-trash text-danger"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <%  }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('partials/footer') %>